<div class="container">
<form id="file" action="/videos/upload" method="post" enctype="multipart/form-data">
    <p>click choose file to take a short video and upload it</p>
    <div class="form-group">
        <label for="file-input">File input</label>
        <input class="form-control-file" id="file-input" type="file" name="video" accept="video/*" capture>
    </div>
    <div class="form-group">
        <input type="submit" value="Upload">
    </div>
	<input type="hidden" name="lat" id="latitude">
	<input type="hidden" name="lng" id="longitude">
</form>

<p>Your location info is the following:</p>

<p id="demo"></p>

<script>
var x = document.getElementById("demo");

getLocation();

function getLocation() {
    if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(showPosition);
    } else {
        x.innerHTML = "Geolocation is not supported by this browser.";
    }
}

function showPosition(position) {
    x.innerHTML = "Latitude: " + position.coords.latitude +
    "<br>Longitude: " + position.coords.longitude;
	$("#latitude").val(position.coords.latitude);
	$("#longitude").val(position.coords.longitude);
}

</script>
</div>